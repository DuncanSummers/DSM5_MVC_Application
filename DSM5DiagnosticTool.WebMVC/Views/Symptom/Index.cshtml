@model IEnumerable<DSM5.Models.SymptomListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Symptoms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SymptomID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SymptomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SymptomID }) |
                @Html.ActionLink("Details", "Details", new { id=item.SymptomID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SymptomID })
            </td>
        </tr>
    }

</table>
